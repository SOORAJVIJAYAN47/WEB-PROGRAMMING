<body bgcolor="black">
	<input type="button" id="btn" value="click" onClick="colorchange()">
	<script>
	let color=document.getElementById('btn')
	function colorchange(){
	let bgcolor='#'+Math.floor(Math.random()*10000000).toString(16)
	document.body.style.background=bgcolor
}
	</script>
